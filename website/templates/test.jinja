{% block body %}
{% if session %}
<!--NAVBAR-->
<div class="topnav">
  <a class="active" href="/" style="font-family:verdana;"><i class="fa-solid fa-house"></i> Home</a>
  <a href="/form" style="font-family:verdana;"><i class="fa-solid fa-address-book"></i> Search</a>
  <a href="/AbtUs" style="font-family:verdana;"><i class="fa-solid fa-address-book"></i> About Us</a>
