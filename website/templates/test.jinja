{% extends "base.html" %}

{% block title %}test{% endblock %}

{% block head %}
{{ super() }}
<style>
.questionsAndReplies {
    width:550px;
    padding: 2em 0 2em 0;
    border:solid 5px #F1F1F1;
    margin-top: 100px;
    margin-right: auto;
    margin-bottom: 0;
    margin-left: auto;
    background-color: #AFC8DE;
}
</style>
{% endblock %}

{% block javascript %}
<script src="{{ url_for('static',filename='HomeButton.js') }}"></script>
{% endblock %}

{% block body %}
{% if session %}

{{ super() }}
<div class = "questionsAndReplies">
<!--INPUT QUESTION BOX-->
<div class="input d-flex flex-column align-items-center justify-content-center">
  <INPUT TYPE="text" id="questionBox" value="" placeholder="Enter Question Here: "><br>
  <button onclick="submit();" id="submitButton">submit</button>

</div>

<!--REPLY BOX-->
<div class="input d-flex flex-column align-items-center justify-content-center">
  <INPUT TYPE="text" id="replyBox" value="" placeholder="Enter Question Here: "><br>
  <button onclick="submitReply()" id="repliesButton">reply</button>
</div>

<!--OUTPUT BOX/WHERE YOU SEE QUESTIONS-->
<div id="questions" class="d-flex flex-column align-items-center justify-content-center"></div>
</div>
  {% else %}
<p><a href="/login" id="qsLoginBtn">Login</a></p>
{% endif %}
{% endblock %}